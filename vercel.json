{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build && mkdir -p ../vercel/output && cp -r dist/* ../vercel/output/",
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/$1", "headers": { "Cache-Control": "public, max-age=0, must-revalidate" } },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/index.html" }
  ]
}
