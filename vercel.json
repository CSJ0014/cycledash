{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/dist" }
    },
    {
      "src": "api/**/*.py",
      "use": "@vercel/python",
      "config": { "runtime": "python3.11" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1/index.py" },
    { "src": "/(.*)", "dest": "frontend/dist/$1" }
  ]
}
